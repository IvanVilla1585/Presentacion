.rslides
    position relative
    list-style none
    overflow hidden
    width 100%
    padding 0
    margin 0
    margin-button 1em


.rslides li
    -webkit-backface-visibility: hidden
    position absolute
    display none
    width 100%
    left 0
    top 0
    margin 0 auto
    margin-top 5em


.rslides li:first-child
    position relative
    display block
    float: left


.rslides img
    display block
    width 500px
    border 0
    margin 0 auto


@media screen and (min-width:1024px)

  .rslides
      img
        width 500px
